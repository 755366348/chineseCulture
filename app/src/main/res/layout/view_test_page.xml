<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_bg_gradient"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/testTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_title"
            android:textColor="@color/home_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/testSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/test_subtitle"
            android:textColor="@color/home_secondary"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/testProgressRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/testProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_progress_default"
                android:textColor="@color/home_primary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/testProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:maxHeight="10dp"
                android:minHeight="10dp"
                android:progressDrawable="@drawable/progress_test" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/testLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:indeterminateTint="@color/home_primary"
            android:visibility="gone" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/testQuestionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/home_card"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/testQuestionIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_question_index_default"
                    android:textColor="@color/home_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/testQuestionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/home_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/testAnswerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/testAnswerA"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/home_card"
                        android:gravity="start|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textAllCaps="false"
                        android:textColor="@color/home_primary"
                        app:rippleColor="@color/ripple_soft"
                        app:cornerRadius="14dp"
                        app:strokeColor="@color/home_secondary"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/testAnswerB"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/home_card"
                        android:gravity="start|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textAllCaps="false"
                        android:textColor="@color/home_primary"
                        app:rippleColor="@color/ripple_soft"
                        app:cornerRadius="14dp"
                        app:strokeColor="@color/home_secondary"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/testAnswerC"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/home_card"
                        android:gravity="start|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textAllCaps="false"
                        android:textColor="@color/home_primary"
                        app:rippleColor="@color/ripple_soft"
                        app:cornerRadius="14dp"
                        app:strokeColor="@color/home_secondary"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/testAnswerD"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/home_card"
                        android:gravity="start|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textAllCaps="false"
                        android:textColor="@color/home_primary"
                        app:rippleColor="@color/ripple_soft"
                        app:cornerRadius="14dp"
                        app:strokeColor="@color/home_secondary"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/testAnswerE"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/home_card"
                        android:gravity="start|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textAllCaps="false"
                        android:textColor="@color/home_primary"
                        app:rippleColor="@color/ripple_soft"
                        app:cornerRadius="14dp"
                        app:strokeColor="@color/home_secondary"
                        app:strokeWidth="1dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/testSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_test_submit"
            android:elevation="3dp"
            android:text="@string/test_submit"
            android:textColor="@color/white"
            android:visibility="gone"
            app:cornerRadius="16dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/testResultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/home_card"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/testResultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_result_title"
                    android:textColor="@color/home_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/testResultType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/home_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/testResultSubType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/home_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/testResultDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/home_primary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/testResultPersonHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/test_result_person_hint"
                    android:textColor="@color/home_secondary"
                    android:textSize="12sp" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/testPersonPager"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginTop="10dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />

                <TextView
                    android:id="@+id/testResultFinish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/home_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
