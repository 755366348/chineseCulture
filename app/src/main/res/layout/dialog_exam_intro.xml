<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/home_card"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:id="@+id/testIntroTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_intro_title"
            android:textColor="@color/home_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:overScrollMode="never">

            <TextView
                android:id="@+id/testIntroContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/home_primary"
                android:textSize="13sp" />
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/testIntroButton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_test_submit"
            android:text="@string/test_intro_button"
            android:textColor="@color/white"
            app:cornerRadius="16dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
